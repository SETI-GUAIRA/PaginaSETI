{% extends "../../layout.njk" %}

{% block content %}
    <section id="top_banner">
        <div class="banner" style="background: url({{randomImage}}) no-repeat center center / cover;">
            <div class="inner text-center">
                <h2 class="banner_heading">Secretaria Municipal de
                    <span>Tecnologia da Informação</span></h2>
            </div>
        </div>
        <div class="page_info">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-sm-8 col-xs-6"></div>
                    <div class="col-md-4 col-sm-4 col-xs-6" style="text-align:right;">Home<span class="sep">
                            /
                        </span><span class="current">Tutoriais</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="section-heading text-center">
                <div class="col-md-12 col-xs-12">
                    <h1>Últimos
                        <span>Tutoriais</span></h1>
                    <p class="subheading">Estes são os nossos útimos tutoriais, caso tenha algum em mente, pesquise. Estes tutoriais são destinados aos servidores que utilizam os computadores do município e necessitam de auxílos com algumas tarefas</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-6">
                <form class="search" action="/seti/tutoriais/search" method="GET">
                    <input type="search" placeholder="Pesquisar..." name="filter" {% if search.term %} value="{{search.term}}" {% endif %}>
                    <button type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
        <div class="row">
            {% for tutorial in tutoriais %}
                <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 portfolio-item">
                    <div class="portfolio-one">
                        <div class="portfolio-head">
                            <div class="portfolio-img"><img alt="" src="{{tutorial.img if tutorial.img else '//placehold.it/500x500?text=TUTORIAL SEM IMAGEM'}}"></div>
                            <div class="portfolio-hover">
                                <a class="portfolio-link" href="/seti/tutoriais/{{tutorial.id}}">
                                    <i class="fa fa-link"></i>
                                </a>
                            </div>
                        </div>
                        <div class="portfolio-content">
                            <h6>{{tutorial.title}}</h6>
                            <p>Publicado em
                                {{tutorial.published.day}}
                                às
                                {{tutorial.published.hour}}</p>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="id" value="{{tutorial.id}}">
            {% endfor %}
        </div>
        {# <div class="row">
            <div class="col-md-12 col-sm-12 pages">
                <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}" data-filter="{{filter}}"></div>
            </div>
        </div> #}
    </div>
</section>
{% endblock content %}
