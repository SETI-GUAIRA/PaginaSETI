{% extends "../layout.njk" %}

{% block content %}
    <section id="top_banner">
        <div class="banner" style="background: url({{randomImage}}) no-repeat center center / cover;" >
            <div class="inner text-center">
                <h2 class="banner_heading">Secretaria Municipal de
                    <span>Tecnologia da Informação</span></h2>
            </div>
        </div>
        <div class="page_info">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-sm-8 col-xs-6"></div>
                    <div class="col-md-4 col-sm-4 col-xs-6" style="text-align:right;">Home<span class="sep">
                            /
                        </span><span class="current">Sistemas</span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="section-heading text-center">
                <div class="col-md-12 col-xs-12">
                    <h1>Nossos
                        <span>Sistemas</span></h1>
                    <p class="subheading">Sistemas desenvolvidos por nossa Secretaria por intermédio da Diretoria de Projetos, Desenvolvimento e Inovação
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 portfolio-item">
                <div class="portfolio-one">
                    <div class="portfolio-head">
                        <div class="portfolio-img"><img alt="Sarcophagus" src="/images/SarcophagusInicial.png"></div>
                        <div class="portfolio-hover">
                            <a class="portfolio-link" href="/seti/sistemas/SobreSarcophagus">
                                <i class="fa fa-question"></i>
                            </a>
                        </div>
                    </div>
                    <div class="portfolio-content">
                        <h5 class="title">Sarcophagus</h5>
                        <p>Software Livre para gerenciamento de cemitérios!</p>
                    </div>
                    <!-- End portfolio-content -->
                </div>
                <!-- End portfolio-item -->
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 portfolio-item">
                <div class="portfolio-one">
                    <div class="portfolio-head">
                        <div class="portfolio-img"><img alt="animalys" src="/images/animalysInfo.png"></div>
                        <div class="portfolio-hover">
                            <a class="portfolio-link" target="_blank" href="http://sistemas.guaira.pr.gov.br/animalys/info.html">
                                <i class="fa fa-link"></i>
                            </a>
                        </div>
                    </div>
                    <!-- End portfolio-head -->
                    <div class="portfolio-content">
                        <h5 class="title">Animalys</h5>
                        <p>Sistema para controle de castramento animal e controle de canil.</p>
                    </div>
                    <!-- End portfolio-content -->
                </div>
                <!-- End portfolio-item -->
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 portfolio-item">
                <div class="portfolio-one">
                    <div class="portfolio-head">
                        <div class="portfolio-img"><img alt="carta de serviços municipais" src="/images/cartaserv.png"></div>
                        <div class="portfolio-hover">
                            <a class="portfolio-link" target="_blank" href="http://sistemas.guaira.pr.gov.br/cartaservicos/servicos.xhtml">
                                <i class="fa fa-link"></i>
                            </a>
                        </div>
                    </div>
                    <!-- End portfolio-head -->
                    <div class="portfolio-content">
                        <h5 class="title">Carta de Serviços Municipais</h5>
                        <p>Informações de todos os serviços de quem o município oferece.</p>
                    </div>
                    <!-- End portfolio-content -->
                </div>
                <!-- End portfolio-item -->
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 portfolio-item">
                <div class="portfolio-one">
                    <div class="portfolio-head">
                        <div class="portfolio-img"><img alt="" src="/images/festaN-inicial.png"></div>
                    </div>
                    <!-- End portfolio-head -->
                    <div class="portfolio-content">
                        <h5 class="title">Sistema da Festa da Nações</h5>
                        <p>Sistema desenvolvido para as entidades para controle de vendas de suas barracas durante as
                            <a href="https://www.facebook.com/festadasnacoesdeguaira/">
                                <strong>Festa das Nações</strong>
                            </a>
                        </p>
                    </div>
                    <!-- End portfolio-content -->
                </div>
                <!-- End portfolio-item -->
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 portfolio-item">
                <div class="portfolio-one">
                    <div class="portfolio-head">
                        <div class="portfolio-img"><img alt="casa" src="/images/habitacao.jpg"></div>
                    </div>
                    <!-- End portfolio-head -->
                    <div class="portfolio-content">
                        <h5 class="title">Controle Habitacional</h5>
                        <p>Sistema de controle Habitacional.</p>
                    </div>
                    <!-- End portfolio-content -->
                </div>
                <!-- End portfolio-item -->
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 portfolio-item">
                <div class="portfolio-one">
                    <div class="portfolio-head">
                        <div class="portfolio-img"><img alt="Tela turismárius" src="/images/turismarius.png"></div>
                    </div>
                    <!-- End portfolio-head -->
                    <div class="portfolio-content">
                        <h5 class="title">Turismárius</h5>
                        <p>Sistema de controle de visitas ao cinema municipal e de filmes exibidos</p>
                    </div>
                    <!-- End portfolio-content -->
                </div>
                <!-- End portfolio-item -->
            </div>
        </div>

    </section>
{% endblock content %}