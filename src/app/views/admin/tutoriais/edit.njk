{% extends "../layout.njk" %}

{% block style %}
    <link rel="stylesheet" href="/admin/plugins/summernote/summernote-bs4.css">
    <link href="/admin/css/photos.css" rel="stylesheet">
{% endblock style %}

{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Editar Tutorial</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            Tutoriais
                        </li>
                        <li class="breadcrumb-item active">Editar Tutorial</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <!-- form start -->
                        <form role="form" class="form" method="POST" action="/seti/users/tutorial?_method=PUT" enctype="multipart/form-data">
                            {% include "./fields.njk" %}
                            <input type="hidden" name="id" value="{{tutorial.id}}">
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Atualizar</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
{% endblock content %}

{% block footerScript %}
    <script src="/admin/js/photoUpload.js"></script>
    <!-- Toastr -->
    <script src="/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('.textarea').summernote()
        })
    </script>
{% endblock footerScript %}