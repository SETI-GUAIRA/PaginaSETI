<div class="card-body">
    <div class="form-group">
        <label>Título</label>
        <input type="text" name="title" class="form-control" placeholder="Digite o título" value="{{tutorial.title}}" required="required">
    </div>
    <div class="form-group">
        <label>Imagens</label>
        <div>
            <div id="photos-upload">
                <input id="photos-input" type="file" name="photos" value="{{tutorial.files}}" multiple="multiple" accept="image/*" onchange="PhotosUpload.handleFileInput(event)">
                <p>Selecione as imagens na ordem correta</p>
            </div>
            <div id="photos-preview">
                {% if tutorial.files %}
                    {% for image in tutorial.files %}
                        <div class="photos" id="{{image.id}}">
                            <img src="{{image.src}}" alt="{{image.name}}">
                            <i class="fa fa-trash" onclick="PhotosUpload.removeOldPhoto(event)"></i>
                        </div>
                    {% endfor %}
                    <input type="hidden" name="removed_files">
                {% endif %}
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Descrição</label>
        <textarea class="textarea" name="description" placeholder="Digite a descrição" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{tutorial.description}}</textarea>
    </div>
</div>