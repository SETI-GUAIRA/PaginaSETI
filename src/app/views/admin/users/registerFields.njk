    <div class="form-group">
        <label>Nome</label>
        <div>
            <input type="text" name="name" class="form-control" placeholder="Digite o nome" value="{{user.name}}" required="required">
        </div>
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input type="email" name="email" class="form-control" placeholder="Digite o email" value="{{user.email}}" required="required">
    </div>
    <label>Tipo do Usu√°rio</label>
    <select class="form-control" name="userType">
        <option value="admin">Administrador</option>
        <option value="comum">Comum</option>
    </select>
    <div class="form-group">
        <label>Senha</label>
        <input type="password" name="password" class="form-control" placeholder="Digite uma senha" required="required">
    </div>
