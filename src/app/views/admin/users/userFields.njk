<div class="card-body">
    <div class="form-group">
        <label>Nome</label>
        <input type="text" name="name" class="form-control" placeholder="Digite um nome" value="{{user.name}}" required="required">
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input type="email" name="email" class="form-control" placeholder="Digite um novo email" value=" {{user.email}}" required="required">
    </div>
    {% if session.userType == "admin"%}
        <label>Tipo do Usu√°rio</label>
        <select class="form-control" name="userType">
            <option value="admin" {% if user.type == "admin" %} selected {% endif %}>Administrador</option>
            <option value="comum" {% if user.type == "comum" %} selected {% endif %}>Comum</option>
        </select>
    {% endif %}
    {% if session.userId == user.id or session.userType == "admin" %}
        <div class="form-group">
            <label>Mudar a senha</label>
            <input type="password" name="NewPassword" class="form-control" placeholder="Digite uma nova senha">
        </div>
        <div class="form-group">
            <label>Repita a nova senha</label>
            <input type="password" name="passwordRepeat" class="form-control" placeholder="Repita a nova senha">
        </div>
    {% endif %}
</div>